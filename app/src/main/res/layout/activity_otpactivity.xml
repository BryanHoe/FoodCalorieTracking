<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/light_yellow"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:padding="24dp"
        android:layout_margin="16dp"
        android:clipToOutline="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:radius="25dp">

        <TextView
            android:id="@+id/tvOtpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Email"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E3A1F"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvOtpDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A verification link has been sent to your email. Please check your inbox and click the link to verify your account."
            android:textSize="16sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Resend Button -->
        <Button
            android:id="@+id/btnResendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend Verification Email"
            android:backgroundTint="#FFD580"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnGoToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done Confirming"
            android:backgroundTint="#B2F2BB"
            android:textColor="#000000"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#FFB3B3"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:padding="12dp" />
</LinearLayout>