<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logexercisebkg"
    tools:context=".LogExerciseActivity">

    <!-- Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingTop="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBackBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Content Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- ðŸƒâ€â™‚ï¸ Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Your Exercise"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginBottom="20dp" />

                <!-- Date Selector -->
                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Select Date"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp" />

                <!-- Exercise Name -->
                <TextView
                    android:id="@+id/tvExerciseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exercise Name"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <!-- Weight Type Spinner -->
                <Spinner
                    android:id="@+id/spWeightType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />

                <!-- Calories per Hour -->
                <TextView
                    android:id="@+id/tvCaloriesPerHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calories per hour: -"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp" />

                <!-- Hours Input -->
                <EditText
                    android:id="@+id/etHours"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter hours"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginBottom="20dp" />

                <!-- Total Calories Burned -->
                <TextView
                    android:id="@+id/tvTotalCaloriesBurned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Calories Burned: 0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Save"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#81C784"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:cornerRadius="30dp" />

</LinearLayout>